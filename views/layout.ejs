<script type="text/javascript">
	var socket = io.connect('http://localhost:3000',{query: 'name=<%= name %>'});
	function socket_handler(){
		socket.on('connect', function(){
		});
		socket.on('update',function(data){
			$('#snackbar').text(data);
			$('#snackbar').addClass('show');
			setTimeout(function(){ 
				$('#snackbar').removeClass('show'); 
			}, 3000);
			
		});
	};
	function logout(){
		$.ajax({
			url: '/logout',
			method:'GET',
			success: function(response){
				window.location.replace('https://<%= name %>.myshopify.com/admin/apps')
			},
			error:function(){
				alert('Error! Please close tab to log out.');
			}
		});
	}

</script>